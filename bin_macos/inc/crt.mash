// Add-in for blinking
word Crt.Blink          128

//Some methods

{_ifdef_ argcounter}

proc print(...):
  var t
  t ?= argcount
  while t > 0:
    _print()
    dec t
  end
end

proc println(...):
  var t
  t ?= argcount
  while t > 0:
    _print()
    dec t
  end
  _println("")
end

{_end_}

